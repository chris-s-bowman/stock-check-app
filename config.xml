<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.bdau"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

<name>Stock Check App</name>

<description>
    Stock Check App
</description>

<author>
    Chris Bowman
</author>

<preference name="SplashScreen" value="res/android" />

    <!-- Define app icon for each platform. -->
    <platform name="android">
      <icon src="res/android/icon.png" />
      <icon src="res/android/ldpi.png" density="ldpi" />
      <icon src="res/android/mdpi.png" density="mdpi" />
      <icon src="res/android/hdpi.png" density="hdpi" />
      <icon src="res/android/xhdpi.png" density="xhdpi" />
    </platform>

    <!-- Splash Screen -->
    <splash src="res/android/splash.png" />
    <splash src="res/android/splash-port-ldpi.png" platform="android" qualifier="ldpi" />
    <splash src="res/android/splash-port-mdpi.png" platform="android" qualifier="mdpi" />
    <splash src="res/android/splash-port-hdpi.png" platform="android" qualifier="hdpi" />
    <splash src="res/android/splash-port-xhdpi.png" platform="android" qualifier="xhdpi" />
    </widget>
